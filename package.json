{
  "name": "matriz-website",
  "version": "1.0.0",
  "description": "Site matriz pessoal com servidor backend e banco de dados",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "setup": "node scripts/setup-database.js",
    "setup-db": "node scripts/setup-database.js",
    "health": "node scripts/health-check.js",
    "info": "node scripts/server-info.js",
    "deploy-check": "node scripts/deploy-check.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "backup:create": "node scripts/backup-database.js create",
    "backup:list": "node scripts/backup-database.js list",
    "backup:restore": "node scripts/restore-database.js restore",
    "backup:verify": "node scripts/restore-database.js verify",
    "system:backup": "node scripts/complete-system-backup.js create",
    "system:list": "node scripts/complete-system-backup.js list",
    "system:verify": "node scripts/complete-system-backup.js verify",
    "github:backup": "node scripts/github-backup.js push",
    "github:sync": "node scripts/github-backup.js sync"
